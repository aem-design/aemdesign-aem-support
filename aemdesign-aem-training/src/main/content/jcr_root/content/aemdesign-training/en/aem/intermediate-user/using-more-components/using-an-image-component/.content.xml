<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[aemdesign:content-type/page]"
        cq:template="/conf/aemdesign-training/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:lockable,mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Using an Image Component"
        sling:resourceType="aemdesign/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/page-details"/>
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    componentTheme="[]"
                    listFrom="children"
                    listType="list"
                    parentPage="/content/aemdesign-training/en/aem/intermediate-user/using-more-components"
                    printStructure="{Boolean}true"
                    tagsMatch="any"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p>The image component displays an image and accompanying text according to the specified parameters. You can either drag and drop the image from the Content Finder or click to upload an image.&lt;/p>&#xa;&lt;p>&amp;nbsp;&lt;/p>&#xa;"
                            textIsRich="true"/>
                        <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Using_Image_Component-Insert_Component.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="500"/>
                        <text_756962224
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>To insert the image into the component, click on the image component to launch the menu bar.&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <image_1238899400
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Using_Image_Component-Menu_Bar.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="450"/>
                        <text_877456265
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>Click on &lt;b>Configure&lt;/b> to open the Edit dialog box. Upload the image from your local machine and edit the image properties.&lt;br>&#xa;&lt;img src=&quot;/content/dam/aemdesign-training/Using_Image_Component-Edit_Button.png&quot;>&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_1423476735
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p>Note: You can drag an image from the content finder.&lt;/p>&#xa;&lt;ul>&#xa;&lt;li>To edit the image, click on the image to launch the menu bar. Click &lt;b>Edit&lt;/b> to enter the edit mode.&lt;br>&#xa;&lt;img src=&quot;/content/dam/aemdesign-training/Editing_a_Page-Edit.png&quot;>&lt;br>&#xa;&amp;nbsp;&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <image_1549373067
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Using_Image_Component-Edit_Mode.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="350"/>
                        <text_600267476
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>You can &lt;b>Crop&lt;/b> the image.&lt;br>&#xa;&lt;img src=&quot;/content/dam/aemdesign-training/Using_Image_Component-Crop.png&quot;>&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_1745239755
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>You can &lt;b>Rotate&lt;/b> the image.&lt;br>&#xa;&lt;img src=&quot;/content/dam/aemdesign-training/Using_Image_Component-Rotate.png&quot;>&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_1577316330
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>To enter the &lt;b>Full Screen Mode&lt;/b>, click on:&lt;br>&#xa;&lt;img src=&quot;/content/dam/aemdesign-training/Using_a_component-Full_Screen_Button.png&quot;>&lt;br>&#xa;&amp;nbsp;&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_1371498201
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            text="&lt;p>&amp;nbsp;&lt;/p>&#xa;&lt;p>&amp;nbsp;&lt;/p>&#xa;&lt;p>&amp;nbsp;&lt;/p>&#xa;"
                            textIsRich="true"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
</jcr:root>
