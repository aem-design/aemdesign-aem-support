<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[aemdesign:content-type/page]"
        cq:template="/conf/aemdesign-training/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:lockable,mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Edit the Agent Properties"
        sling:resourceType="aemdesign/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/page-details"/>
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    componentTheme="[]"
                    listFrom="children"
                    listType="list"
                    parentPage="/content/aemdesign-training/en/aem/administrator/replication"
                    printStructure="{Boolean}true"
                    tagsMatch="any"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <text_1907134826
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>Access the &lt;b>Tools&lt;/b> tab in AEM.&lt;/li>&#xa;&lt;li>Click &lt;b>Replication&lt;/b> (left pane to open the folder).&lt;/li>&#xa;&lt;li>Double-click &lt;b>Agents on author&lt;/b> (either the left or the right pane).&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <image_1586087139
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Replication-Agent_List.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="500"/>
                        <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>Click the appropriate agent name (which is a link) to show detailed information on that agent.&lt;/li>&#xa;&lt;li>Click &lt;b>Edit&lt;/b> to open the configuration dialog:&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <image
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Replication-Edit_Properties_Dialog.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="500"/>
                        <text_1251963660
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;div>&lt;i>In the &lt;b>Settings&lt;/b> tab:&lt;/i>&lt;/div>&#xa;&lt;ul>&#xa;&lt;li>&lt;i>&lt;b>Activate&lt;/b> – Enabled/Disabled&lt;/i>&lt;/li>&#xa;&lt;li>&lt;i>&lt;b>Description&lt;/b> – Description of the agent&lt;/i>&lt;/li>&#xa;&lt;li>&lt;i>&lt;b>Retry Delay&lt;/b> – Retry in milliseconds&lt;/i>&lt;/li>&#xa;&lt;li>&lt;i>&lt;b>Serialization Type&lt;/b> – set as Default&lt;/i>&lt;/li>&#xa;&lt;/ul>&#xa;&lt;p>&lt;i>In the Transport tab:&lt;/i>&lt;/p>&#xa;&lt;ul>&#xa;&lt;li>&lt;i>&lt;b>URI&lt;/b> – Target URI&lt;/i>&lt;/li>&#xa;&lt;li>&lt;i>&lt;b>User&lt;/b> – Site-specific user account used for replication.&lt;/i>&lt;/li>&#xa;&lt;/ul>&#xa;&lt;p>&lt;i>You can configure other parameters as required.&lt;/i>&lt;/p>&#xa;&lt;p>&amp;nbsp;&lt;/p>&#xa;&lt;ul>&#xa;&lt;li>Click &lt;b>OK&lt;/b> to save the settings.&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
</jcr:root>
