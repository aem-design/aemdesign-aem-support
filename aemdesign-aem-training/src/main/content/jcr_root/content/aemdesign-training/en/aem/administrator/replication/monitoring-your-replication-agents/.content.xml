<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[aemdesign:content-type/page]"
        cq:template="/conf/aemdesign-training/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:lockable,mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Monitoring your Replication Agents"
        sling:resourceType="aemdesign/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/page-details"/>
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    componentTheme="[]"
                    listFrom="children"
                    listType="list"
                    parentPage="/content/aemdesign-training/en/aem/administrator/replication"
                    printStructure="{Boolean}true"
                    tagsMatch="any"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <text_1907134826
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p>To monitor a replication agent:&lt;/p>&#xa;&lt;ul>&#xa;&lt;li>Access the &lt;b>Tools&lt;/b> tab in AEM.&lt;/li>&#xa;&lt;li>Click &lt;b>Replication&lt;/b>.&lt;/li>&#xa;&lt;li>Double-click the link to agents for the appropriate environment (either the left or the right pane); for example &lt;b>Agents on author&lt;/b>.â€¨The resulting window shows an overview of all your replication agents for the author environment, including their target and status.&lt;/li>&#xa;&lt;li>Click the appropriate agent name (which is a link) to show detailed information on that agent:&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <image_1586087139
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Replication-Agent_Monitoring.png"
                            imageOption="fixedImageGenerated"
                            imageRotate="0"
                            width="500"/>
                        <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p>Here you can:&lt;/p>&#xa;&lt;ul>&#xa;&lt;li>See whether the agent is enabled.&lt;/li>&#xa;&lt;li>See the target of any replications.&lt;/li>&#xa;&lt;li>See whether the replication queue is currently active (enabled).&lt;/li>&#xa;&lt;li>See whether there are any items in the queue.&lt;/li>&#xa;&lt;li>&lt;b>Refresh&lt;/b> or &lt;b>Clear&lt;/b> to update the display of queue entries; this helps you see items enter and leave the queue.&lt;/li>&#xa;&lt;li>&lt;b>View Log&lt;/b> to access the log of any actions by the replication agent.&lt;/li>&#xa;&lt;li>&lt;b>Test Connection&lt;/b> to the target instance.&lt;/li>&#xa;&lt;li>&lt;b>Force Retry&lt;/b> on any queue items if required.&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
</jcr:root>
