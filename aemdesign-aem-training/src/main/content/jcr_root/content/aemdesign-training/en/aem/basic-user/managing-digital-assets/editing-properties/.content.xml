<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[aemdesign:content-type/page]"
        cq:template="/conf/aemdesign-training/settings/wcm/templates/twocolumn"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:lockable,mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Editing Properties"
        sling:resourceType="aemdesign/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <page-details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/page-details"/>
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    componentTheme="[]"
                    listFrom="children"
                    listType="list"
                    parentPage="/content/aemdesign-training/en/aem/basic-user/managing-digital-assets"
                    tagsMatch="any"/>
                <contentblock
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentTheme="[]"
                    hideTitle="true"
                    hideTitleSeparator="true">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <text_1644352933
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>Navigate to the location of the asset whose metadata you want to edit.&lt;/li>&#xa;&lt;li>Click the &lt;b>Information&lt;/b> icon to view asset properties.&lt;img src=&quot;/content/dam/aemdesign-training/Editing_a_Page-Info.png&quot;>&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_366997897
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p style=&quot;margin-left: 40px;&quot;>Alternatively, click the &lt;b>Eye&lt;/b>&amp;nbsp;icon on the top right of the asset properties page and select Properties to view the asset metadata.&lt;/p>&#xa;"
                            textIsRich="true"/>
                        <image_1233722215
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/media/image"
                            fileReference="/content/dam/aemdesign-training/Managing_Assets-Eye.png"
                            imageOption="asIs"
                            imageRotate="0"
                            width="500"/>
                        <text_1355968648
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;ul>&#xa;&lt;li>Use the &lt;b>Edit&lt;/b> icon&amp;nbsp;from the&amp;nbsp;Toolbar&amp;nbsp;to edit the asset properties.&lt;img src=&quot;/content/dam/aemdesign-training/Editing_a_Page-Edit.png&quot;>&lt;/li>&#xa;&lt;/ul>&#xa;"
                            textIsRich="true"/>
                        <text_993923254
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/content/text"
                            componentTheme="[]"
                            text="&lt;p style=&quot;margin-left: 40px;&quot;>Click the &lt;b>Save&lt;/b> icon when you have finished editing the properties.&lt;/p>&#xa;&lt;p style=&quot;margin-left: 40px;&quot;>&amp;nbsp;&lt;/p>&#xa;&lt;p style=&quot;margin-left: 40px;&quot;>&amp;nbsp;&lt;/p>&#xa;"
                            textIsRich="true"/>
                    </par>
                </contentblock>
            </par>
        </article>
    </jcr:content>
</jcr:root>
