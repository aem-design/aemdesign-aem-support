{
  "extends": "@aem-design/compose-webpack/configs/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "./",

    "paths": {
      "@/core/components/*": [
        "src/core/js/components/*"
      ],
      "@/core/module/*": [
        "src/core/js/modules/*"
      ],
      "@/core/utility/*": [
        "src/core/js/utilities/*"
      ],
      "@/typings/*": [
        "@types/*"
      ]
    }
  },

  "exclude": [
    "public/**/*",
    "node_modules/**/*"
  ],

  "include": [
    "@types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.scss"
  ]
}
