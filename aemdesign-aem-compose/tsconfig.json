{
  "extends": "@aem-design/compose-webpack/configs/tsconfig.json",
  
  "compilerOptions": {
    "baseUrl": "./src",

    "paths": {
      "@components/*": [
        "core/js/components/*"
      ],
      "@module/*": [
        "core/js/modules/*"
      ],
      "@type/*": [
        "core/@types/*"
      ],
      "@utility/*": [
        "core/js/utilities/*"
      ]
    }
  },

  "exclude": [
    "public/**/*",
    "node_modules/**/*"
  ],

  "include": [
    "../@types/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.scss"
  ]
}
