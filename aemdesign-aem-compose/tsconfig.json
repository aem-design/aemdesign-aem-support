{
  "extends": "@aem-design/compose-webpack/configs/tsconfig.json",
  
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@components/*": [
        "src/core/js/components/*"
      ],
      "@module/*": [
        "src/core/js/modules/*"
      ],
      "@type/*": [
        "src/core/@types/*"
      ],
      "@utility/*": [
        "src/core/js/utilities/*"
      ]
    }
  },

  "exclude": [
    "public/**/*",
    "node_modules/**/*"
  ],

  "include": [
    "@types/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.scss"
  ]
}
