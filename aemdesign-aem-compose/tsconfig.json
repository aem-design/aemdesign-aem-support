{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "pretty": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",

    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "scripthost"
    ],

    "paths": {
      "@global/*": [
        "source/core/js/*"
      ],
      "@components/*": [
        "source/core/js/components/*"
      ],
      "@module/*": [
        "source/core/js/modules/*"
      ],
      "@type/*": [
        "source/core/@types/*"
      ],
      "@utility/*": [
        "source/core/js/utilities/*"
      ]
    }
  },

  "include": [
    "@types/*.d.ts",
    "source/**/*.ts",
    "source/**/*.tsx",
    "source/**/*.vue",
    "source/**/*.scss"
  ],

  "exclude": [
    "public",
    "node_modules",
    "packages"
  ]
}
