{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "pretty": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",

    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],

    "paths": {
      "@/core/*": [
        "src/core/js/*"
      ],
      "@/core/components/*": [
        "src/core/js/components/*"
      ],
      "@/core/modules/*": [
        "src/core/js/modules/*"
      ],
      "@/core/types/*": [
        "src/core/types/*"
      ],
      "@/core/utilities/*": [
        "src/core/js/utilities/*"
      ]
    }
  },

  "include": [
    "@types/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.scss",
  ],

  "exclude": [
    "public",
    "node_modules"
  ]
}
