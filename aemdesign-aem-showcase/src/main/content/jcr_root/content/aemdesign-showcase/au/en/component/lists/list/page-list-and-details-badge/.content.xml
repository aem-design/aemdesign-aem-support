<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:allowedTemplates="[/conf/aemdesign-showcase/settings/wcm/templates/.*]"
        cq:template="/conf/aemdesign-showcase/settings/wcm/templates/onecolumn"
        jcr:primaryType="cq:PageContent"
        jcr:title="Page List and Details Badge"
        sling:resourceType="aemdesign/components/template/base">
        <header
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/header"
            cancelInheritParent="true">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    badgeCustom="true"
                    badgeFields="title"
                    badgeFieldsTemplate="card"
                    componentId="pagelist_header"
                    detailsBadge="cardTitleDescriptionAction"
                    listFrom="children"
                    parentPage="/content/aemdesign-showcase/au/en/component/lists/list/page-list-and-details-badge"
                    sortOrder="asc"
                    tagsMatch="any">
                </pagelist>
            </par>
        </header>
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <page_details
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/page-details"
                    componentId="page_details_article"/>
            </par>
        </article>
        <footer
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/footer"
            cancelInheritParent="true">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <pagelist
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/lists/pagelist"
                    badgeCustom="true"
                    badgeFields="[title,title]"
                    badgeFieldsTemplate="card"
                    componentId="pagelist_footer"
                    detailsBadge="cardTitleDescriptionAction"
                    listFrom="children"
                    parentPage="/content/aemdesign-showcase/au/en/component/lists/list/page-list-and-details-badge"
                    sortOrder="asc"
                    tagsMatch="any">
                </pagelist>
            </par>
        </footer>
    </jcr:content>
    <page1/>
    <page2/>
    <page3/>
</jcr:root>
