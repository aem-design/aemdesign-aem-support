<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[aemdesign-showcase:content-type/page]"
        cq:template="/conf/aemdesign-showcase/settings/wcm/templates/twocolumn"
        jcr:primaryType="cq:PageContent"
        jcr:title="Footer"
        sling:resourceType="aemdesign/components/template/base">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <contentblock1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentId="contentblock1">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <footer
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/layout/footer"
                            cancelInheritParent="true"
                            componentId="plainfooter">
                            <par
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="aemdesign/components/layout/container">
                                <text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="aemdesign/components/content/text"
                                    componentId="text1"
                                    text="&lt;p>Footer Content&lt;/p>&#xa;"
                                    textIsRich="true"/>
                            </par>
                        </footer>
                    </par>
                </contentblock1>
                <contentblock2
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/layout/contentblock"
                    componentId="contentblock2">
                    <par
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/layout/container">
                        <footer
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/layout/footer"
                            cancelInheritParent="true"
                            componentId="footerwithbackground">
                            <par
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="aemdesign/components/layout/container">
                                <text
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="aemdesign/components/content/text"
                                    componentId="text2"
                                    text="&lt;p>Footer Content with Background&lt;/p>&#xa;"
                                    textIsRich="true"/>
                            </par>
                            <bgimage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="aemdesign/components/media/image"
                                fileReference="/content/dam/aemdesign-showcase/en/common/aem-design.png"/>
                        </footer>
                    </par>
                </contentblock2>
            </par>
        </article>
    </jcr:content>
</jcr:root>
