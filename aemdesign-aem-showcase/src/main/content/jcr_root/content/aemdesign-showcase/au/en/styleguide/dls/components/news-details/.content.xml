<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/aemdesign-showcase/settings/wcm/templates/styleguide"
        jcr:primaryType="cq:PageContent"
        jcr:title="News Details"
        sling:resourceType="aemdesign/components/template/styleguide">
        <aside
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/aside">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container"/>
        </aside>
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aemdesign/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aemdesign/components/layout/container">
                <news_details
                    cq:tags="[aemdesign-showcase:content-type/widgets/onlinemedia/provider/youtube,aemdesign-showcase:content-type/asset/audio,aemdesign-showcase:content-type/asset/document]"
                    jcr:mixinTypes="[cq:Taggable]"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aemdesign/components/details/news-details"
                    badgeLinkStyle="[aemdesign-showcase:component-style-modifier/button/normal/primary]"
                    badgeLinkText="CTA link"
                    badgeLinkTitle="CTA link"
                    componentId="news_details"
                    componentTheme="[aemdesign-showcase:component-style-theme/layout/news-details/theme--news-details]"
                    textIsRich="true">
                    <secondaryImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/media/image"/>
                    <thumbnail
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/media/image"
                        fileReference="/content/dam/aemdesign-showcase/en/components/media/image/city1.jpg"/>
                    <bgimage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="aemdesign/components/media/image"/>
                </news_details>
            </par>
        </article>
    </jcr:content>
</jcr:root>
