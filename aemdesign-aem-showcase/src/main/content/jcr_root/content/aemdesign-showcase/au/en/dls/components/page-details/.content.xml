<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
		  xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
		  jcr:primaryType="cq:Page">
	<jcr:content
		cq:template="/conf/aemdesign-showcase/settings/wcm/templates/styleguide"
		jcr:primaryType="cq:PageContent"
		jcr:title="Page Details"
		sling:resourceType="aemdesign/components/template/styleguide">
		<aside
			jcr:primaryType="nt:unstructured"
			sling:resourceType="aemdesign/components/layout/aside">
			<par
				jcr:primaryType="nt:unstructured"
				sling:resourceType="aemdesign/components/layout/container"/>
		</aside>
		<article
			jcr:primaryType="nt:unstructured"
			sling:resourceType="aemdesign/components/layout/article">
			<par
				jcr:primaryType="nt:unstructured"
				sling:resourceType="aemdesign/components/layout/container">
				<page_details
					jcr:mixinTypes="[cq:Taggable]"
					jcr:primaryType="nt:unstructured"
					sling:resourceType="aemdesign/components/details/page-details"
					componentId="page_details"
					showBreadcrumb="false"
					showPageDate="false"
					showToolbar="false"
					textIsRich="true"/>
				<contentblock_page_details_standard
					jcr:primaryType="nt:unstructured"
					sling:resourceType="aemdesign/components/layout/contentblock"
					componentId="contentblock_page_details_standard">
					<par
						jcr:primaryType="nt:unstructured"
						sling:resourceType="aemdesign/components/layout/container">
						<contentblock_page_details_standard_heading
							jcr:primaryType="nt:unstructured"
							sling:resourceType="aemdesign/components/content/text"
							componentId="contentblock_page_details_standard_heading"
							text="&lt;h2 class=&quot;h4&quot;>Standard&lt;/h2>&#xd;&#xa;"
							textIsRich="true"/>
                        <contentblock_page_details_standard_component
                            jcr:mixinTypes="[cq:Taggable]"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="aemdesign/components/details/page-details"
                            componentId="contentblock_page_details_standard_component"
                            description="&lt;p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Cursus vitae congue mauris rhoncus aenean vel elit scelerisque. Mi sit amet mauris commodo quis.&lt;/p>&#xd;&#xa;"
                            showBreadcrumb="false"
                            showPageDate="false"
                            showParsys="false"
                            showToolbar="false"
                            textIsRich="true"
                            title="Heading"/>
					</par>
				</contentblock_page_details_standard>
			</par>
		</article>
	</jcr:content>
</jcr:root>
